override_utf8_locale yes
use_xft yes
xftfont ubuntu:size=10.5
xftalpha 0.5
uppercase no
no_buffers yes # Subtract cached and buffered ram from memory usage.

display :0.0
text_buffer_size 2048
update_interval .75        # change to .001 for 1000 times per second stress test
total_run_times 0
own_window yes
own_window_type desktop
own_window_type normal
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 0  # semi-transparent
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 1920 1080
maximum_width 1920

draw_shades yes
# off-white
default_color ECEAE4
# blue
color1 1EB5FF
# light blue
color2 30DDFB
# dark blue
color3 0090ff
# lime
color4 98FF76

#color Gris 222222
#color Rojo 880719
default_shade_color 000000

draw_outline no
draw_borders no
stippled_borders 0
alignment top_left        # top_left for Screen 1, top_right for Screen 2

gap_x 0
gap_y 0


